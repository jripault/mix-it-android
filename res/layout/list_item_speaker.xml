<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_speaker"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <include layout="@layout/list_item_header" />
    
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="@style/ListItem">
	    
	    <CheckBox
	        android:id="@+id/star_button"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dip"
	        android:layout_marginLeft="4dip"
	        android:focusable="false"
	        android:clickable="false"
	        android:contentDescription="@string/description_star"
	        android:button="@android:drawable/btn_star" />
	    <TextView
	        android:id="@+id/speaker_name"
	        android:layout_toLeftOf="@id/star_button"
	        android:layout_alignParentLeft="true"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        style="@style/SessionTitle" />
	    <TextView
	        android:id="@+id/speaker_company"
	        android:layout_below="@id/speaker_name"
	        android:layout_toLeftOf="@id/star_button"
	        android:layout_alignParentLeft="true"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="2dip"
	        style="@style/SessionSubtitle" />
	</RelativeLayout>
	
	<View
    	android:id="@+id/session_divider"
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:background="@android:drawable/divider_horizontal_bright" />

</LinearLayout>
